<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/bt_crDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Database" />

    <Button
        android:id="@+id/bt_dlDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Database" />

    <Button
        android:id="@+id/bt_crTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Table" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_delTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete Table" />

        <EditText
            android:id="@+id/ed_delTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Type Table to delete" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_insertRowToTbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert Row to tblop" />

<!--    <Button-->
<!--        android:id="@+id/bt_insertRowFromTbl"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Insert Row From tblop" />-->

    <Button
        android:id="@+id/bt_updateRowToTbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Row to tblop" />

    <Button
        android:id="@+id/bt_querying_T"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Querying data tblop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_insertStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Insert Student" />

        <EditText
            android:id="@+id/ed_id_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Type malop to reference" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_querying_S"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Querying sinhVien by malop" />


    <TextView
        android:id="@+id/ex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

</LinearLayout>